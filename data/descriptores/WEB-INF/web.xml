<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
 <description>Servlets ProdAndes</description>
 <!-- SERVLETS -->
 <servlet>
  <servlet-name>Ingresar</servlet-name>
  <servlet-class>Interfaz.ServletIngresar</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>RegistrarProveedor</servlet-name>
  <servlet-class>Interfaz.ServletRegistrarProveedor</servlet-class>
 </servlet>
 <!-- MAPPING -->
 <servlet-mapping>
  <servlet-name>Ingresar</servlet-name>
  <url-pattern>/ingresar.htm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RegistrarProveedor</servlet-name>
  <url-pattern>/registrarProveedor.htm</url-pattern>
 </servlet-mapping>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
