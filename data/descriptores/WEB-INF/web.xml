<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
 <description>Servlets ProdAndes</description>
 <!-- SERVLETS -->
 <servlet>
  <servlet-name>Ingreso</servlet-name>
  <servlet-class>Interfaz.ServletIngresar</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>Registro</servlet-name>
  <servlet-class>Interfaz.ServletRegistrar</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>RegistroMateriaPrimaProveedor</servlet-name>
  <servlet-class>Interfaz.ServletRegistrarMateriaPrimaProveedor</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>RegistroProveedor</servlet-name>
  <servlet-class>Interfaz.ServletRegistrarProveedor</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>RegistroLlegadaMaterial</servlet-name>
  <servlet-class>Interfaz.ServletRegistrarLlegadaMaterial</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>RegistroMaterial</servlet-name>  <servlet-class>Interfaz.ServletRegistrarMaterial</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>RegistroComponenteProveedor</servlet-name>
  <servlet-class>Interfaz.ServletRegistrarComponenteProveedor</servlet-class>
 </servlet>
 <!-- MAPPING -->
 <servlet-mapping>
  <servlet-name>Ingreso</servlet-name>
  <url-pattern>/ingreso.htm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>Registro</servlet-name>
  <url-pattern>/registro.htm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RegistroMateriaPrimaProveedor</servlet-name>
  <url-pattern>/registroMateriaPrimaProveedor.htm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RegistroProveedor</servlet-name>
  <url-pattern>/registroProveedor.htm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RegistroLlegadaMaterial</servlet-name>
  <url-pattern>/registroLlegadaMaterial.htm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RegistroMaterial</servlet-name>
  <url-pattern>/registroMaterial.htm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RegistroComponenteProveedor</servlet-name>
  <url-pattern>/registroComponenteProveedor.htm</url-pattern>
 </servlet-mapping>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
