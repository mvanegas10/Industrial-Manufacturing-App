<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
 <description>Servlets ProdAndes</description>
 <!-- SERVLETS -->
 <servlet>
  <servlet-name>Ingreso</servlet-name>
  <servlet-class>Interfaz.ServletIngresar</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>RegistroMateriaPrima</servlet-name>
  <servlet-class>Interfaz.ServletRegistrarMateriaPrima</servlet-class>
 </servlet>
 <!-- MAPPING -->
 <servlet-mapping>
  <servlet-name>Ingreso</servlet-name>
  <url-pattern>/ingreso.htm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RegistroMateriaPrima</servlet-name>
  <url-pattern>/registroMateriaPrima.htm</url-pattern>
 </servlet-mapping>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
